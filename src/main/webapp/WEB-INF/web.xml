<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <context-param>
    <param-name>insertDemoData</param-name>
    <param-value>true</param-value>
  </context-param>
  
  <listener>
    <listener-class>com.es.phoneshop.web.ProductDemoDataContextListener</listener-class>
  </listener>
  
  <filter>
    <filter-name>dosFilter</filter-name>
    <filter-class>com.es.phoneshop.web.DosFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>dosFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>addItems</servlet-name>
    <servlet-class>com.es.phoneshop.web.AddItemsProductListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addItems</servlet-name>
    <url-pattern>/products/addItems/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productPage</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productPriceHistoryPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductPriceHistoryPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productPriceHistoryPage</servlet-name>
    <url-pattern>/products/history/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>com.es.phoneshop.model.exceptions.product.ProductNotFoundException</exception-type>
    <location>/WEB-INF/pages/productNotFound.jsp</location>
  </error-page>

  <error-page>
    <exception-type>com.es.phoneshop.model.exceptions.order.OrderNotFoundException</exception-type>
    <location>/WEB-INF/pages/orderNotFound.jsp</location>
  </error-page>

  <servlet>
    <servlet-name>cartPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cartPage</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>checkoutPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkoutPage</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderOverview</servlet-name>
    <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderOverview</servlet-name>
    <url-pattern>/order/overview/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteCartItem</servlet-name>
    <servlet-class>com.es.phoneshop.web.DeleteCartItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteCartItem</servlet-name>
    <url-pattern>/cart/deleteItem/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>minicart</servlet-name>
    <servlet-class>com.es.phoneshop.web.MiniCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>minicart</servlet-name>
    <url-pattern>/cart/minicart</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>advancedSearch</servlet-name>
    <servlet-class>com.es.phoneshop.web.AdvancedSearchPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>advancedSearch</servlet-name>
    <url-pattern>/products/search</url-pattern>
  </servlet-mapping>
  
</web-app>
